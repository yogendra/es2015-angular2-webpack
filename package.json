{
  "name": "es2015-webpack-starter",
  "version": "1.0.0",
  "description": "ES2015 + Webpack Starter Project",
  "author": "Yogendra Rampruia",
  "repository": "https://github.com/yogendra/angular-webpack-starter",
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true
    }
  },
  "scripts": {
    "build": "webpack -p --progress;cp src/index.html dist/",
    "watch": "webpack-dev-server --content-base src/ --inline --hot",
    "serve": "webpack-dev-server --content-base dist/"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-angular2-annotations": "^5.0.0",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-webpack": "^6.4.0",
    "babel-preset-stage-0": "^6.5.0",
    "concurrently": "^2.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.0.0",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.15.0",
    "json-loader": "^0.5.3",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "postcss-loader": "^0.8.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.12.1"
  },
  "dependencies": {
    "angular2": "^2.0.0-beta.13",
    "babel-runtime": "^6.6.1",
    "bootstrap-css-only": "^3.3.6",
    "es6-promise": "^3.1.2",
    "es6-shim": "^0.35.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "reflect-metadata": "^0.1.2",
    "rxjs": "^5.0.0-beta.2",
    "zone.js": "^0.6.9"
  }
}
